<resources
    xmlns:android="http://schemas.android.com/tools">
	
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">  
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <dimen name="paddingTop">
        0dp
    </dimen>
    <style name="TextButton">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">15dp</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:shadowColor">#969696</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
    </style>
    <style name="PageTitle">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:background">#33B5E5</item>
	    <item name="android:gravity">center</item>
    </style>
    <style name="CardLayout">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:layout_marginRight">10dp</item>
	    <item name="android:layout_marginTop">6dp</item>
	    <item name="android:layout_marginBottom">6dp</item>
	    <item name="android:background">@drawable/bg_card</item>
	    <item name="android:orientation">vertical</item>
    </style>    
    <style name="CardLayoutLine">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">@android:color/white</item>
	    <item name="android:orientation">horizontal</item>
    </style>    
    <style name="CardText">
	    <item name="android:layout_width">140dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@android:color/black</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:layout_gravity">center_vertical</item>
	    <item name="android:gravity">right</item>
    </style>
</resources>
