<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@android:color/holo_blue_dark" >	    
        
    <TextView
        android:id="@+id/header"
        android:text="@string/register_header"
        style="@style/PageTitle" />
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:background="@android:color/white" >
	    
	    <RelativeLayout 
	    	android:layout_width="match_parent"
		    android:layout_height="wrap_content" >	    
	        
		    <LinearLayout android:id="@+id/email_block"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="25dp"
		        android:orientation="horizontal">  
		        
		        <TextView android:id="@+id/email"
		   		        android:layout_width="90dp"
		                android:layout_height="wrap_content"
		                android:text="Email"
		                android:textSize="16sp"
				        android:textColor="@android:color/black"
				        android:layout_gravity="center_vertical"
			        android:gravity="right"
		        />
		
		        <EditText
		            android:id="@+id/fld_email"
		            android:layout_width="200dp"
		            android:layout_height="wrap_content"
		            android:hint="your@email.com"
		            android:layout_marginLeft="8dp"
			        android:inputType="textEmailAddress"
			        android:paddingLeft="5dp"
			        android:textSize="13sp"
			        android:layout_gravity="center_vertical"
		        />
		  	</LinearLayout>
		  	
		    <LinearLayout android:id="@+id/first_name_block"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/email_block"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="25dp"
		        android:orientation="horizontal">
		
		        <TextView android:id="@+id/pwd"
		            android:layout_width="90dp"
		            android:layout_height="wrap_content"
		            android:text="First name"
		            android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
			        android:gravity="right"
		         />
		
		        <EditText
		            android:id="@+id/fld_forename"
		            android:layout_width="200dp"
		            android:layout_height="wrap_content"
		            android:hint="john"
		            android:layout_marginLeft="8dp"
			        android:inputType="text"
			        android:paddingLeft="5dp"
			        android:textSize="13sp"
			        android:layout_gravity="center_vertical"
		         />
		    </LinearLayout>
		  	
		    <LinearLayout android:id="@+id/surname_block"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/first_name_block"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="25dp"
		        android:orientation="horizontal">
		
		        <TextView android:id="@+id/surname"
		            android:layout_width="90dp"
		            android:layout_height="wrap_content"
		            android:text="Last name"
		            android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
			        android:gravity="right"
		         />
		
		        <EditText
		            android:id="@+id/fld_surname"
		            android:layout_width="200dp"
		            android:layout_height="wrap_content"
		            android:hint="hancock"
		            android:layout_marginLeft="8dp"
			        android:inputType="text"
			        android:paddingLeft="5dp"
			        android:textSize="13sp"
			        android:layout_gravity="center_vertical"
		         />
		    </LinearLayout>
		  	
		    <LinearLayout android:id="@+id/pwd_block"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/surname_block"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="25dp"
		        android:orientation="horizontal">
		
		        <TextView android:id="@+id/pwd"
		            android:layout_width="90dp"
		            android:layout_height="wrap_content"
		            android:text="Password"
		            android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
			        android:gravity="right"
		         />
		
		        <EditText
		            android:id="@+id/fld_pwd"
		            android:layout_width="200dp"
		            android:layout_height="wrap_content"
		            android:hint="********"
		            android:layout_marginLeft="8dp"
			        android:inputType="textPassword"
			        android:paddingLeft="5dp"
			        android:textSize="13sp"
			        android:layout_gravity="center_vertical"
		         />
		    </LinearLayout>
		    
		     <Button
		        android:id="@+id/btn_register"
		        android:layout_width="290dp"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/pwd_block"
		        android:text="Register"
		        android:layout_centerHorizontal="true"
		        style="@style/TextButton"       
		     />	
		</RelativeLayout>
	</ScrollView>
</LinearLayout>
