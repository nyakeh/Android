<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/holo_blue_dark" 
	android:fitsSystemWindows="true">
	
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@android:color/white" 
	android:paddingTop="@dimen/paddingTop" >
    
    <RelativeLayout 
	    	android:layout_width="match_parent"
		    android:layout_height="fill_parent">
	
	    <LinearLayout android:id="@+id/uname_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">  
	        
	        <TextView android:id="@+id/username"
	   		        android:layout_width="90dp"
	                android:layout_height="wrap_content"
	                android:text="Email"
	                android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
		        android:gravity="right"
	        />
	
	        <EditText
	            android:id="@+id/fld_username"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:hint="your@email.com"
	            android:layout_marginLeft="8dp"
		        android:inputType="textEmailAddress"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	        />
	  	</LinearLayout>
	  	
	    <LinearLayout android:id="@+id/first_name_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/uname_block"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">
	
	        <TextView android:id="@+id/pwd"
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:text="First name"
	            android:textSize="16sp"
		        android:textColor="@android:color/black"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
	         />
	
	        <EditText
	            android:id="@+id/fld_first_name"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:hint="john"
	            android:layout_marginLeft="8dp"
		        android:inputType="text"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	         />
	    </LinearLayout>
	  	
	    <LinearLayout android:id="@+id/surname_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/first_name_block"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">
	
	        <TextView android:id="@+id/surname"
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:text="Last name"
	            android:textSize="16sp"
		        android:textColor="@android:color/black"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
	         />
	
	        <EditText
	            android:id="@+id/fld_surname"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:hint="hancock"
	            android:layout_marginLeft="8dp"
		        android:inputType="text"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	         />
	    </LinearLayout>
	  	
	    <LinearLayout android:id="@+id/pwd_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/surname_block"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">
	
	        <TextView android:id="@+id/pwd"
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:text="Password"
	            android:textSize="16sp"
		        android:textColor="@android:color/black"
		        android:layout_gravity="center_vertical"
		        android:gravity="right"
	         />
	
	        <EditText
	            android:id="@+id/fld_pwd"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:hint="********"
	            android:layout_marginLeft="8dp"
		        android:inputType="textPassword"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	         />
	    </LinearLayout>
	    
	     <Button
	        android:id="@+id/btn_register"
	        android:layout_width="290dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/pwd_block"
	        android:text="Register"
	        android:layout_centerHorizontal="true"
	        style="@style/TextButton"       
	     />	
	</RelativeLayout>
</ScrollView>
    <!-- The navigation drawer -->
    <ListView
	    android:id="@+id/left_drawer"
	    android:layout_width="260dp"
	    android:layout_height="match_parent"
	    android:layout_gravity="start"
	    android:choiceMode="singleChoice"
        android:divider="#969696"
        android:dividerHeight="0dp"
        android:background="#f7f7f7"
		android:paddingTop="@dimen/paddingTop" />
</android.support.v4.widget.DrawerLayout>
