<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/drawer_layout"    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalculateActivity" >
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

	    <LinearLayout android:id="@+id/property_value_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal">  
	        
	        <TextView android:id="@+id/property_value"
	   		        android:layout_width="110dp"
	                android:layout_height="wrap_content"
	                android:text="Property value"
	                android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
			        android:gravity="right"
	        />
	
	        <EditText
	            android:id="@+id/fld_property_value"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:hint="150000"
	            android:layout_marginLeft="8dp"
		        android:inputType="number"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	        />
	  	</LinearLayout>
	  	
	    <LinearLayout android:id="@+id/deposit_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal" 
	        android:layout_below="@id/property_value_block">
	        
	        <TextView android:id="@+id/deposit"
	   		        android:layout_width="110dp"
	                android:layout_height="wrap_content"
	                android:text="Deposit"
	                android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
			        android:gravity="right"
	        />
	
	        <EditText
	            android:id="@+id/fld_deposit"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:hint="Â£20000"
	            android:layout_marginLeft="8dp"
		        android:inputType="number"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	        />
	  	</LinearLayout>
	  	
	    <LinearLayout android:id="@+id/term_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal" 
	        android:layout_below="@id/deposit_block"> 
	        
	        <TextView android:id="@+id/deposit"
	   		        android:layout_width="110dp"
	                android:layout_height="wrap_content"
	                android:text="Term"
	                android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="right"
			        android:gravity="right"
	        />
	
	        <EditText
	            android:id="@+id/fld_term"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:hint="25"
	            android:layout_marginLeft="8dp"
		        android:inputType="number"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="right"
	        />
	  	</LinearLayout>
	  	
	    <LinearLayout android:id="@+id/interest_rate_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal" 
	        android:layout_below="@id/term_block">  
	        
	        <TextView android:id="@+id/interest_rate"
	   		        android:layout_width="110dp"
	                android:layout_height="wrap_content"
	                android:text="Interest Rate"
	                android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
			        android:gravity="right"
	        />
	
	        <EditText
	            android:id="@+id/fld_interest_rate"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:hint="4.5"
	            android:layout_marginLeft="8dp"
		        android:inputType="number"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	        />
	  	</LinearLayout>
	  	
	    <LinearLayout android:id="@+id/fees_block"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal" 
	        android:layout_below="@id/interest_rate_block">  
	        
	        <TextView android:id="@+id/fees"
	   		        android:layout_width="110dp"
	                android:layout_height="wrap_content"
	                android:text="Fees"
	                android:textSize="16sp"
			        android:textColor="@android:color/black"
			        android:layout_gravity="center_vertical"
			        android:gravity="right"
	        />
	
	        <EditText
	            android:id="@+id/fld_fees"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:hint="200"
	            android:layout_marginLeft="8dp"
		        android:inputType="number"
		        android:paddingLeft="5dp"
		        android:textSize="13sp"
		        android:layout_gravity="center_vertical"
	        />
	  	</LinearLayout>
	    
	     <Button
	        android:id="@+id/btn_calculate"
	        android:layout_width="290dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/fees_block"
	        android:text="Calculate"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:layout_marginTop="15dp"
	        android:textSize="13sp"
	        android:textStyle="bold"        
	     />
	     </RelativeLayout>
</ScrollView>

<!-- The navigation drawer -->
<LinearLayout
    android:id="@+id/left_drawer"
    android:layout_height="fill_parent"
    android:layout_width="240dp"
    android:orientation="vertical"
    android:layout_gravity="start" >
    <TextView
        android:id="@+id/drawer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pages"        
        android:textColor="@android:color/white"
        android:background="@android:color/black">
    </TextView>
    <ListView android:id="@+id/drawer_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</LinearLayout>
</android.support.v4.widget.DrawerLayout>
