<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <fragment
        android:name="uk.co.nyakeh.duallayout.HeadlinesFragment"
        android:id="@+id/headlines_fraagment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/simple_list_item_1" />

    <fragment
        android:name="uk.co.nyakeh.duallayout.ArticleFragment"
        android:id="@+id/article_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/article_fragment" />

</LinearLayout>